{
  "name": "medicare-healthcare-system",
  "version": "1.0.0",
  "description": "Full-stack healthcare management system with simple backend",
  "main": "backend/server.js",
  "scripts": {
    "dev": "concurrently \"npm run backend\" \"npm run client\"",
    "backend": "cd backend && npm start",
    "client": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "start": "cd backend && npm start",
    "install-all": "npm install && cd backend && npm install && cd ../client && npm install"
  },
  "keywords": ["healthcare", "react", "nodejs", "simple-backend"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}